/**app.wxss**/
@import './assets/fonts/iconfont.wxss';

page {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  margin-bottom: 20rpx;
}

/* 按钮通用样式 */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #4A90E2;
  color: #fff;
}

.btn-outline {
  background-color: transparent;
  border: 1px solid #4A90E2;
  color: #4A90E2;
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-primary {
  color: #4A90E2;
}

.text-secondary {
  color: #666;
}

.text-small {
  font-size: 24rpx;
}

.text-medium {
  font-size: 28rpx;
}

.text-large {
  font-size: 32rpx;
}

/* 间距 */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.space-between {
  justify-content: space-between;
}

/* 其他通用样式 */
.rounded {
  border-radius: 50%;
}

.hidden {
  display: none;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

