/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 20rpx 400rpx;
  background: linear-gradient(to bottom, #d0dcff, #eef1ff);
  height: 100vh;
  box-sizing: border-box;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.title {
  font-size: 68rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

/* 统计部分 */
.stats-container {
  width: 100%;
  display: flex;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(145, 160, 220, 0.25);
  padding: 16rpx 20rpx;
  margin-bottom: 10rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 引言部分 */
.quote-container {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(145, 160, 220, 0.25);
  padding: 20rpx 25rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  border-left: 6rpx solid rgba(176, 186, 238, 0.8);
}

.quote-container::before {
  content: '"';
  position: absolute;
  top: 0;
  left: 10rpx;
  font-size: 120rpx;
  line-height: 1;
  color: rgba(176, 186, 238, 0.2);
  font-family: serif;
}

.quote {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  font-style: italic;
  position: relative;
  z-index: 1;
  padding-left: 10rpx;
}

.quote-author {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  margin-top: 10rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* 模式选择部分 */
.mode-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mode-card {
  height: 180rpx;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.mode-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.workday {
  background: linear-gradient(135deg, #5E9FFF 0%, #4A80E5 100%);
}

.restday {
  background: linear-gradient(135deg, #8E79F3 0%, #7A67DC 100%);
}

.mode-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 30rpx;
  position: relative;
}

.mode-title {
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
}

.mode-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  max-width: 70%;
}

.icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  opacity: 0.9;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}
